<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console appender configuration -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSSSSSSS'Z'} [%t] %-5p %c %x - %m%n"/>
        </Console>

        <!-- Debug console appender configuration -->
        <Console name="DebugConsole" target="SYSTEM_OUT">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSSSSSSS'Z'} [%t] %-5p %c %x - %m%n"/>
        </Console>

        <!-- File appender configuration -->
        <RollingFile name="File" fileName="G:/Java_parser/Lab_parser/logs/main.log"
                     filePattern="G:/Java_parser/Lab_parser/logs/main-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSSSSSSS'Z'} [%t] %-5p %c %x - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root logger configuration -->
        <Root level="WARN">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

        <!-- Debug logger configuration -->
        <Logger name="parser" level="DEBUG" additivity="false">
            <AppenderRef ref="DebugConsole"/>
        </Logger>
    </Loggers>
</Configuration>
